# =============================================================================
# CGraph Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
MIX_ENV=dev
PORT=4000
PHX_HOST=localhost

# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=your-secret-key-base-at-least-64-characters-long-generate-with-mix-phx-gen-secret

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=ecto://postgres:postgres@localhost/cgraph_dev
POOL_SIZE=10

# -----------------------------------------------------------------------------
# Authentication (Guardian JWT)
# -----------------------------------------------------------------------------
# Generate with: mix phx.gen.secret
GUARDIAN_SECRET=your-guardian-secret-at-least-64-characters-long-generate-with-mix-phx-gen-secret

# -----------------------------------------------------------------------------
# Email Service (Resend)
# -----------------------------------------------------------------------------
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# File Storage (Cloudflare R2 or S3-compatible)
# -----------------------------------------------------------------------------
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=cgraph-uploads
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CDN_URL=https://cdn.yourdomain.com

# -----------------------------------------------------------------------------
# Push Notifications (Expo)
# -----------------------------------------------------------------------------
EXPO_ACCESS_TOKEN=your-expo-access-token

# -----------------------------------------------------------------------------
# Web3 / Wallet Authentication (Optional)
# -----------------------------------------------------------------------------
# WALLET_CONNECT_PROJECT_ID=your-project-id

# -----------------------------------------------------------------------------
# Monitoring & Error Tracking (Optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn
# APPSIGNAL_PUSH_API_KEY=your-appsignal-key

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true

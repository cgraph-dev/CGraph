# CGraph Environment Configuration
# Copy this file to .env.local and fill in the values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://postgres:1994Lks.Oli2017.iheartlegale2021@localhost:5432/cgraph_dev
DATABASE_POOL_SIZE=10

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# JWT SECRETS
# ============================================
# Generate with: mix phx.gen.secret
JWT_SECRET=your-super-secret-jwt-key-min-64-chars-long-replace-in-production
JWT_ACCESS_TOKEN_TTL=7200
JWT_REFRESH_TOKEN_TTL=2592000

# ============================================
# CLOUDFLARE R2 (File Storage)
# ============================================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=cgraph-files
R2_PUBLIC_URL=https://files.cgraph.io

# ============================================
# EMAIL CONFIGURATION (Resend or SMTP)
# ============================================
MAIL_FROM=noreply@cgraph.io
RESEND_API_KEY=re_xxxxxxxxxxxx

# ============================================
# ETHEREUM / WEB3 (Wallet Authentication)
# ============================================
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# ============================================
# EXPO / MOBILE PUSH NOTIFICATIONS
# ============================================
EXPO_ACCESS_TOKEN=your-expo-access-token

# ============================================
# SENTRY (Error Tracking)
# ============================================
SENTRY_DSN=https://xxxx@sentry.io/xxxx

# ============================================
# APPLICATION SETTINGS
# ============================================
PHX_HOST=localhost
PHX_PORT=4000
SECRET_KEY_BASE=generate-with-mix-phx-gen-secret-at-least-64-chars

# Frontend URLs (for CORS)
WEB_URL=http://localhost:3000
MOBILE_URL=exp://localhost:8081

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WALLET_AUTH=true
ENABLE_E2EE=true
ENABLE_VOICE_CHANNELS=false
